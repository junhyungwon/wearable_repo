#!/bin/sh
#
# Starts lighttpd.
#

PASSWDFILE=/etc/lighttpd/lighttpd.user
CONFIGFILE=/etc/lighttpd/lighttpd.conf
DEFAULT_CONFIGFILE=/etc/lighttpd/default-lighttpd.conf

TEMPKEY_PRI=/tmp/tempkey.pem
TEMPKEY_PUB=/tmp/tempkey.pub

start() {
	if [ ! -f "${TEMPKEY_PRI}"  ] ||  [ ! -f "${TEMPKEY_PUB}" ];then
		echo -n "Generating a temporal rsa key(${TEMPKEY_PRI}, ${TEMPKEY_PUB})"
		openssl genrsa -out ${TEMPKEY_PRI} 2048
		openssl rsa -in ${TEMPKEY_PRI} -pubout > ${TEMPKEY_PUB}
		ln -f -s ${TEMPKEY_PUB} /var/www/default/tempkey.pub
		ln -f -s ${TEMPKEY_PUB} /var/www/tempkey.pub
	fi

    if [[ -e "${PASSWDFILE}" ]]; then
	    echo -n "Starting lighttpd: "
	    start-stop-daemon -S -q -p /var/run/lighttpd.pid --exec /usr/sbin/lighttpd -- -f ${CONFIGFILE}
    else
	    echo -n "Starting lighttpd init passwd mode: "
	    start-stop-daemon -S -q -p /var/run/lighttpd.pid --exec /usr/sbin/lighttpd -- -f ${DEFAULT_CONFIGFILE}
    fi
	echo "OK"
}
stop() {
	echo -n "Stopping lighttpd: "
	start-stop-daemon -K -q -p /var/run/lighttpd.pid
	echo "OK"
}
restart() {
	stop
	start
}

case "$1" in
  start)
	start
	;;
  stop)
	stop
	;;
  restart|reload)
	restart
	;;
  *)
	echo "Usage: $0 {start|stop|restart}"
	exit 1
esac

exit $?

